{% extends "base.html.twig" %}

{% block title %} {{ parent() }}{% endblock %}

{% block contenu %}

<h2>Réinitialisation du mot de passe</h2>

{% if form.message is defined %}
<p>{{ form.message }}</p>
{% else %}
<form class="form-signin" method="post" action="index.php?page=mdp_modif&token={{ form.token }}">
    <div class="form-group">
        <label for="inputPassword">Nouveau mot de passe:</label>
        <input type="password" id="inputPassword" name="inputPassword" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="inputPassword2">Confirmer le mot de passe:</label>
        <input type="password" id="inputPassword2" name="inputPassword2" class="form-control" required>
   </div>
    <button type="submit" class="btn btn-lg btn-block" name="btReinitialiser">Réinitialiser</button>
</form>
{% endif %}

{% endblock %}